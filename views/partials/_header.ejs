<header class="header">
    <button class="header__menu-button"></button>
    <h1 class="header__title">Routine A</h1>
    <button class="header__journal-button">Journal</button>
</header>

<nav class="menu">
    <div class="menu__header">
        <button class="menu__close"></button>
        <h2 class="header__title">Routines</h2>
        <h2 class="header__journal-button">Sort</h2>
    </div>
    <ul class="menu__routine-list">
        <% for (let routine of routines) { %>
            <li class="menu__routine" data-id="<%= routine.routine_id %>" data-order="<%= routine.routine_order %>">
                <p><%= routine.routine_name %></p>
                <aside class="menu__routine-completed"><%= routine.to_char %></aside>
                <button class="menu__routine-drag-handle"></button>
            </li>
        <% } %>
        <li class="menu__add-routine">
            <input type="text" id="" placeholder="Name your routine">
            <button class="menu__cancel-add"></button>
        </li>
    </ul>
    <button class="menu__create-routine">
        <img src="/img/add.svg" alt="">
        Create a routine
    </button>
</nav>
