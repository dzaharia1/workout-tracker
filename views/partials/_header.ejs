<header class="header" data-date="<%= todaysDate %>" data-routineid="<%= thisRoutine.routine_id %>">
    <button class="icon-button--small header__menu-button"></button>
    <div class="header__heading">
        <h1 class="header__title"><%= thisRoutine.routine_name %></h1>
        <div class="progress-bar">
            <% for (let thisMovement of movements) { %>
                <% if (thisMovement.to_char === todaysDate) {%>
                    <div class="progress-step progress-step--completed" data-movementid="<%= thisMovement.movement_id %>"></div>
                <% } else {%>
                    <div class="progress-step" data-movementid="<%= thisMovement.movement_id %>"></div>
                <% } %>
            <% } %>
        </div>
    </div>
    <div class="header__journal-button-container">
        <% if (thisRoutine.to_char === todaysDate) { %>
            <button class="header__journal-button header__journal-button--complete">Done today</button>
        <% } else { %>
            <button class="header__journal-button">Done</button>
        <% } %>
    </div>
</header>

<nav class="menu">
    <div class="menu__header">
        <button class="icon-button--small menu__close"></button>
        <h2 class="header__title">Routines</h2>
        <h2 class="header__journal-button">Sort</h2>
    </div>
    <ul class="menu__routine-list">
        <% for (let routine of routines) { %>
            <li class="menu__routine" data-id="<%= routine.routine_id %>" data-order="<%= routine.routine_order %>">
                <a href="/routine/<%= routine.routine_id %>"><%= routine.routine_name %></a>
                <% if (routine.routine_id === nextRoutine.routine_id) { %>
                    <aside class="menu__routine-completed--oldest">Up Next</aside>
                <% } else { %>
                    <aside class="menu__routine-completed"><%= routine.to_char %></aside>
                <% } %>
                <button class="icon-button--small menu__routine-drag-handle"></button>
            </li>
        <% } %>
        <li class="menu__add-routine">
            <input type="text" id="" placeholder="Name your routine">
            <button class="menu__cancel-add"></button>
        </li>
        <button class="menu__create-routine">
            <img src="/img/add.svg" alt="">
            Create a routine
        </button>
    </ul>
</nav>
