<ul class="set__list">
    <%  if (numSets > 0) {
        for (let i = 0; i < numSets; i ++) { %>
        <li class="set" data-setid="<%= i + 1 %>">
            <h1 class="set__title">Superset <%= i + 1 %></h1>
            <ul class="movement__list">
                <% for (movement of movements) {
                    if (movement.set_id === i + 1) { %>
                        <li class="movement">
                            <div class="movement__header">
                                <h3 class="movement__name"><%= movement.movement_name %></h3>
                                <button class="movement__edit-button"></button>
                                <button class="movement__journal-button"></button>
                            </div>
                            <p class="movement__thing">Last:</p>
                            <div class="movement__properties">
                                <div class="movement__property">
                                    <h4>lbs</h4>
                                    <p><%= movement.weight %></p>
                                </div>
                                <div class="movement__property-divider"></div>
                                <div class="movement__property">
                                    <h4>sets</h4>
                                    <p><%= movement.num_sets %></p>
                                </div>
                                <div class="movement__property-divider"></div>
                                <div class="movement__property">
                                    <h4>reps</h4>
                                    <p><%= movement.num_reps %></p>
                                </div>
                            </div>
                        </li>
                    <% }
                } %>
                <li class="movement movement--add-form">
                    <div class="movement__header">
                        <input type="text" class="movement__name-field" placeholder="Movement name">
                        <button class="movement__save-button" data-routineid="<%= thisRoutine.routine_id %>" data-setid="<%= i + 1 %>"></button>
                    </div>
                    <p class="movement__thing">Properties:</p>
                    <div class="movement__properties">
                        <div class="movement__property">
                            <label for="weight">lbs</label>
                            <input type="number" name="weight" id="" placehoder="-">
                        </div>
                        <div class="movement__property-divider"></div>
                        <div class="movement__property">
                            <label for="sets">Sets</label>
                            <input type="number" name="sets" id="" placehoder="-">
                        </div>
                        <div class="movement__property-divider"></div>
                        <div class="movement__property">
                            <label for="reps">Reps</label>
                            <input type="number" name="reps" id="" placehoder="-">
                        </div>
                    </div>
                </li>
                <li class="movement__add">
                    <button class="movement__add-new text-button" data-routineid="<%= thisRoutine.routine_id %>" data-setid="<%= i + 1 %>">
                        Add a movement
                    </button>
                </li>
            </ul>
        </li>
    <% }
       } else { %>
        <li class="set" data-setid="0">
            <h1 class="set__title">Superset 1</h1>
            <ul class="movement__list">
                <li class="movement__add">
                    <button class="movement__add-new text-button" data-routineid="<%= thisRoutine.routine_id %>" data-setid="0">
                        Add a movement
                    </button>
                </li>
            </ul>
        </li>
    <% } %>
    <li class="set">
        <button class="set__add-new text-button">Add a set</button>
    </li>
</ul>
